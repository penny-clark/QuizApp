<%- include('header') %>
    <main>

      <h2>Quiz Creator's Result Page : <%= quiz.creator_name %></h2>
      <section class="myQuiz">

        <h3 class="quiz_title">Quiz title: <%= quiz.title %></h3>



        <div class="maker_quiz_result">
          <table class="result_table">
            <tr>
              <th>Taker</th>
              <th>Answer</th>
            </tr>

            <tr>
              <td><%= quiz.taker_name %></td>

              <% if (quiz.score === '0') { %>
              <td> Failed </td>
              <% } %>

              <% if (quiz.score === '1') { %>
                <td> Correct answer </td>
                <% } %>
            </tr>

          </table>


          <p class="total_result">Total <span><%= quiz.total_attempts %></span> attempts</p>
        <!--  <p><span>correct answer attempt / total attempt * 100 </span>% of attemptation answered correctly.</p> -->
        </div>
      <!--To sharee maker's result link-->
      <div class="share">
        <span>http://localhost:8080/m/<%= quiz.quiz_id %>/results</span> <a href="#" class="shareBT">Share this result</a>
      </div>


    </main>

  </body>
</html>
