<%- include('header') %>

    <main>

      <h3 class="quiz_title"><%= quiz.title %></h3>
      <p class="question">
        <span>Q.</span> <%= quiz.question %>
      </p>

      <form action="" method="POST" id="take-quiz-form">
        <div class="form-inline-wrap">
          <input type="radio" id="possiblea1" name="pick_answer" value="1">
          <label for="take_quiz_option1"><%= quiz.answer1 %></label>
        </div>
        <div class="form-inline-wrap">
          <input type="radio" id="possiblea2" name="pick_answer" value="2">
          <label for="take_quiz_option2"><%= quiz.answer2 %></label>
        </div>

        <div class="form-inline-wrap">
          <label for="taker_name">Your name</label>
          <input type="text" id="taker" name="taker_name" placeholder="optional">
          <button type="submit">Submit answer</button>
        </div>


      </form>

    </main>

  </body>
</html>
