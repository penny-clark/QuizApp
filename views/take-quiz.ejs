<%- include('header') %>

    <main>

      <h3>quiz(title)</h3>
      <p class="question">
        <span>Q.</span> question(content) What material is Captain America's shield made of?
      </p>

      <form action="" method="POST" id="take-quiz-form">
        <div class="form-inline-wrap">
          <input type="radio" name="take_quiz_options" value="Vibranium">
          <label for="take_quiz_option1">Vibranium</label>
        </div>
        <div class="form-inline-wrap">
          <input type="radio" name="take_quiz_options" value="Galvorn">
          <label for="take_quiz_option2">Galvorn</label>
        </div>

        <div>
          <button type="submit">Submit answer</button>
        </div>
      </form>

    </main>

  </body>
